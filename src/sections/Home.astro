<section id="home">
    <div class="fullscreen-bg">
        <video loop muted autoplay class="fullscreen-video">
            <source src={introVideo} type="video/mp4">
        </video>
    </div>
    <div class="content-section">
        <Image src={LogoImg} alt="" height={250} />
        <div class="hero">
            <p>Â¡Preparate para la aventura de tu vida!</p>
            <div class="buttons">
                <Button title="Descarga ya!" />
                <Button title="Seguir leyendo" />
            </div>
        </div>
    </div>
</section>
<style>
    #home{
        min-height: 600px;
        position: relative;
        display: flex;
    }

    .fullscreen-bg {
        position: fixed;
        top: -60px;
        right: 0;
        bottom: 0;
        left: 0;
        overflow: hidden;
        z-index:-100;
        display: flex;
        justify-content: center;
        background-color: black;
    }

    .fullscreen-video {
        position: absolute;
        top: 0;
        height: 100%;
    }


    .content-section {
        display: flex;
        padding: 2rem;
        align-items: center;
        background-color: rgba(255,255,255,.1);
        backdrop-filter: blur(5px);
        height: auto;
        width: 100%;
        flex-direction: column;
    }

    .hero{
        color: var(--white);
        margin-top: 60px;
        font-size: 22px;
        text-align: center;
    }

    .buttons{
        margin-top: 3rem;
        display: flex;
        gap: 1rem;
        align-items: center;
        flex-wrap: wrap;
        justify-content: center;
    }

    /*to delete */
    .section-dark {
        background-color: var(--lightblue);
        color: var(--darkblue);
    }

    .section-light {
        background-color: var(--white);
        color: var(--darkblue);
    }

    .content {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        align-items: center;
        width: 100%;
    }

    .content img {
        flex: 1 1 40%;
        max-width: 100%;
        border-radius: 8px;
    }

    .content .text-box {
        flex: 1 1 50%;
    }

    .content .text-box h2 {
        margin-bottom: 1rem;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .content {
            flex-direction: column;
            text-align: center;
        }

        .content img {
            flex: 1 1 100%;
        }

        .content .text-box {
            flex: 1 1 100%;
        }
    }
</style>