<section id="home">
    <div class="fullscreen-bg">
        <video loop muted autoplay class="fullscreen-video">
            <source src={introVideo} type="video/mp4">
        </video>
    </div>
    <div class="content-section">
        <Image src={LogoImg} alt="" height={250}  data-aos="fade-up" data-aos-anchor-placement="bottom-bottom"/>
        <div class="hero"  data-aos="fade-up" data-aos-anchor-placement="bottom-bottom">
            <h1>¡Prepárate para la aventura de tu vida!</h1>
            <div class="buttons">
                <div class="download-container">
                    <Button title="Descarga*" hreference="#download"/>
                    <span class="alert">*Próximamente</span>
                </div>
                <Button title="Saber más" hreference="#characters" class="hollow-button"/>
            </div>
        </div>
    </div>
</section>
<style>
    #home{
        height: 700px;
        position: relative;
        display: flex;
    }

    .fullscreen-bg {
        position: fixed;
        top: -60px;
        right: 0;
        bottom: 0;
        left: 0;
        overflow: hidden;
        z-index:-100;
        display: flex;
        justify-content: center;
        background-color: black;
    }

    .fullscreen-video {
        position: absolute;
        top: 0;
        height: 100%;
    }


    .content-section {
        display: flex;
        padding: 2rem;
        align-items: center;
        background-color: rgba(255,255,255,.1);
        backdrop-filter: blur(5px);
        height: auto;
        width: 100%;
        flex-direction: column;
        justify-content: space-between;
    }

    .hero{
        color: var(--white);
        text-align: center;
        margin-bottom: 1rem;
    }

    .hero h1{
        font-weight: 500;
    }

    .buttons{
        margin-top: 3rem;
        display: flex;
        row-gap: 0.4rem; /* change to 1 when alert removed */
        column-gap: 1rem;
        align-items: flex-start;
        flex-wrap: wrap;
        justify-content: center;
    }

    .hollow-button{
        background: none;
        color: var(--darkblue);
        border: 3px solid var(--darkblue);
    }

    .hollow-button:hover{
        background-color: var(--darkblue);
    }

    .alert{
        color: var(--accent);
        font-size: 10px;
    }    

    /* Responsive Design */
    @media (min-width: 768px) {
        .buttons{
            
        }
    }
</style>