---
import { Image, Picture } from "astro:assets";
import { getCollection, getEntry } from 'astro:content';

// Get a single entry from a collection.
// Requires the name of the collection and `id`
const seahopData = await getEntry('pokemon', 'seahop');
const calflameData = await getEntry('pokemon', 'calflame');
const vernileafData = await getEntry('pokemon', 'vernileaf');

import InicialAguaImg from "../assets/imgs/inicial_agua.png";
import InicialFuegoImg from "../assets/imgs/inicial_fuego.png";
import InicialPlantaImg from "../assets/imgs/inicial_planta.png";
---
<section id="pokemon" class="section section-light">
    <div  class="content-section">
        <div class="image-row">
            <div class="triangle-top">
                <a href={`/pokemon/${vernileafData?.id}`} class="image-container">
                    <Picture
                        transition:name={"img-vernileaf"}
                        class:list={"image"} 
                        src={InicialPlantaImg} 
                        alt="vernileaf" 
                        width={150}
                    />
                </a>
            </div>
            <div class="triangle-bottom">
                <a href={`/pokemon/${seahopData?.id}`} class="image-container">
                    <Picture 
                        transition:name={"img-seahop"}
                        class:list={"image"} 
                        src={InicialAguaImg} 
                        alt="seahop" 
                        width={150}
                    />
                </a>
                <a href={`/pokemon/${calflameData?.id}`} class="image-container">
                    <Picture
                        transition:name={"img-calflame"}
                        class:list={"image"} 
                        src={InicialFuegoImg} 
                        alt="calflame" 
                        width={150}
                    />
                </a>
            </div>
            <!-- <div class="image-container">
                <Image src={InicialAguaImg} alt="Characters Img" width={100}/>
            </div> -->
        </div>
        <div class="accent-line"></div>
        <div class="text-row">
            <div class="text-container">
                <h2>Descubre los nuevos Pokémon</h2>
                <p>
                    Tontaria esta habita por especies Pokémon únicas, nunca antes vistas.
                    Enfréntate a más de 400 Pokémon distintos 
                    <span class="accent">¿Podrás hacerte con todos?</span>
                </p>
            </div>
        </div>
    </div>
</section>
<style>
    .section{
        display: flex;
        justify-content: center;
    }

    .content-section {
        max-width: 960px;
        display: flex;
        flex-direction: column;
        padding: 2rem 1rem;
        align-items: center;
        justify-content: center;
    }

    .section-dark {
        background-color: var(--lightblue);
        color: var(--darkblue);
    }

    .section-light {
        background-color: var(--white);
        color: var(--darkblue);
    }

    .text-row{
        padding: 0rem;
    }

    .text-container {
        padding: 1.8rem;
    }

    .accent-line{
        width: 160px;
        height: 4px;
        background: var(--accent);
    }

    .text-container h2 {
        
    }

    .text-container p {
        margin-top: 1rem;
    }

    .accent{
        color: var(--accent);
        font-weight: 500;
    }

    .image-row{
        margin-top: 10px;
        padding: 3rem 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 30px;
    }

    .triangle-top{
    }
    .triangle-bottom{
        display: flex;
        gap: 50px;
    }

    .image-container{
        width: 150px;
        height: 150px;
        border-radius: 50%;
        background: radial-gradient(#fff, var(--lightblue));
        display: flex;
        justify-content: center;
        align-items: center;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
    }

    .image{
        margin-left: auto;
        margin-right: auto;
        width: 100%;
        height: 100%;
    }

    .content .text-row h2 {
        margin-bottom: 1rem;
    }

    /* Responsive Design - full screen */
    @media (min-width: 768px) {
        .content-section {
            flex-direction: row;
            display: flex;
            gap: 16px;
        }

        .text-row{
            flex-basis: 50%;
        }

        .image-row{
            flex-basis: 50%;
            margin-top: 0;
        }

        .accent-line{
            width: 4px;
            height: 80px;
        }
    }
</style>