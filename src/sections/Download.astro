<style>
    .section{
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
    }

    .content-section {
        max-width: 960px;
        display: flex;
        flex-direction: column;
        padding: 1rem;
        align-items: center;
        justify-content: center;
    }

    .section-dark {
        background-color: #444;
        color: #fff;
    }

    .section-light {
        background-color: #fff;
        color: #333;
    }

    .text-row{
        padding: 0rem;
    }

    .text-container {
        /* border: #000 solid 1px;
        border-radius: 3px; */
        padding: 1.8rem;
    }

    .text-container h2 {
        
    }

    .text-container p {
        margin-top: 1rem;
    }

    .image-row{
        margin-top: 10px;
        padding: 3rem;
    }

    .image-container{
        position: relative;
        margin:auto;
        max-width: 35rem;
    }

    Image{
        margin-left: auto;
        margin-right: auto;
        width: 100%;
        border-radius: 0.5rem;
    }

    .content .text-row h2 {
        margin-bottom: 1rem;
    }

    /* Responsive Design - full screen */
    @media (min-width: 768px) {
        .content-section {
            flex-direction: row;
            display: flex;
            gap: 16px;
        }

        .text-row{
            flex-basis: 50%;
        }

        .image-row{
            flex-basis: 50%;
            margin-top: 0;
        }
    }
</style>