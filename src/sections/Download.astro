---
import { Image, Picture } from "astro:assets";
import GameboxImg from "../assets/imgs/gamebox.png"
import Button from "../components/Button.astro";
---
<section id="download" class="section section-dark">
    <h2 class="title">Disponible Pr√≥ximamente</h2>
    <div  class="content-section">
        <div class="image-row">
            <div class="image-container">
                <Picture class:list={"image"} src={GameboxImg} alt="Characters Img" height={300}/>
            </div>
        </div>
        <div class="text-row">
            <div class="text-container">
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam repellat, excepturi ratione rerum rem esse omnis natus dolore! Magni, assumenda?</p>
                <Button title="Descarga" class="download-button"/>
            </div>
        </div>
    </div>
</section>
<style>
    .title{
        text-align: center;
        margin-top: 2rem;
    }

    .section{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .content-section {
        max-width: 960px;
        display: flex;
        flex-direction: column;
        padding: 2rem 1rem;
        align-items: center;
        justify-content: center;
        gap: 1.5rem
    }
    .section-dark {
        background-color: var(--lightblue);
        color: var(--darkblue);
    }

    .section-light {
        background-color: var(--white);
        color: var(--darkblue);
    }

    .text-row{
        padding: 0rem;
    }

    .text-container {
        color: var(--darkblue);
        background-color: var(--white);
        padding: 2rem;
        border-radius: 3px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .text-container h2 {
        
    }

    .text-container p {
        margin-top: 1rem;
    }

    .image-row{
    }

    .image-container{
        /* background-color: yellow; */
        display: flex;
        justify-content: center;
    }

    .image{
        border-radius: 5px;
        margin-left: auto;
        margin-right: auto;
    }

    .content .text-row h2 {
        margin-bottom: 1rem;
    }

    .download-button{
        margin-top: 2rem;
        background-color: var(--accent)
    }

    /* Responsive Design - full screen */
    @media (min-width: 768px) {
        .content-section {
            flex-direction: row-reverse;
            display: flex;
            gap: 16px;
            padding: 3rem 2rem;
        }

        .text-row{
            flex-basis: 50%;
        }

        .image-row{
            flex-basis: 50%;
            margin-top: 0;
        }

        .download-button{
            align-self: flex-end;
            margin-right: -70px;
        }
    }
</style>