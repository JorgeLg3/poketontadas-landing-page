---
import { getCollection, render } from "astro:content";
import { Image, Picture } from "astro:assets";
import Layout from '../../layouts/Layout.astro';

// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const pokemons = await getCollection('pokemon');
  return pokemons.map(pokemon => ({
    params: { id: pokemon.id },
    props: { pokemon },
  }));
}
// 2. For your template, you can get the entry directly from the prop
const { pokemon } = Astro.props;
const { data, id } = pokemon;
const { name, description, img,  } = data;

const { Content } = await render(pokemon);
---
<Layout>
  <div>
    <h1>{name}</h1>
    <img 
      class:list={"image"}
      transition:name={`img-${id}`}
      src={`/img/${img}`} 
      alt="vernileaf" 
    />
    <a href='/#pokemon' class="hover:underline opacity-70">← Volver atrás</a>
  </div>
</Layout>
<style>
  .image{
    scroll-behavior: auto;
  }
</style>